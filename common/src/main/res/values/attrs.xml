<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CySwipeRefreshLayout">
        <attr name="j_pin_content" format="boolean"/>
        <attr name="j_keep_header" format="boolean"/>
        <attr name="j_duration_offset" format="integer"/>
        <attr name="j_refresh_enable" format="boolean"/>
        <attr name="j_def_refresh_height" format="dimension"/>
        <attr name="j_def_max_offset" format="dimension|enum">
            <enum name="match_parent" value="-1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ChySpinner">
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="hintText" format="string"/>
        <attr name="hintTextSize" format="dimension"/>
        <attr name="popupHeight" format="dimension"/>
        <attr name="hintTextColor" format="color"/>
    </declare-styleable>

</resources>
