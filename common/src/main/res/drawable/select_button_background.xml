<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#5677ff"/>
            <stroke android:width="@dimen/dp_1" android:color="#5a48da"/>
            <corners android:radius="@dimen/dp_5"/>
            <padding android:bottom="@dimen/dp_2" android:left="@dimen/dp_2" android:right="@dimen/dp_2" android:top="@dimen/dp_2"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#D3DBF0"/>
            <stroke android:width="@dimen/dp_1" android:color="#B4B2DA"/>
            <corners android:radius="@dimen/dp_5"/>
            <padding android:bottom="@dimen/dp_2" android:left="@dimen/dp_2" android:right="@dimen/dp_2" android:top="@dimen/dp_2"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#5677fc"/>
            <stroke android:width="@dimen/dp_1" android:color="#8fb4da"/>
            <corners android:radius="@dimen/dp_5"/>
        </shape>
    </item>
</selector>